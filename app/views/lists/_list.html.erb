
<h2>Your Must Visit List</h2>
<table>
  <% @list.line_landmarks.each do |item| %>
    <tr>
      <td><%= item.quantity %> &times; </td>
      <td><%= item.landmark.name %></td>
      <td class="item_price">
        <%= number_to_currency(item.total_price) %> </td>
    </tr>
  <% end %>

  <tr class="total_line">
    <td colspan="2"> Total </td>
    <td class="total_cell"><%= number_to_currency(list.total_price) %></td>
  </tr>
</table>

<div class="actions">
<ul>
  <%= button_to 'Empty List', list, method: :delete,
      data: { confirm: 'Are you sure?' } %>
</ul>
</div>
